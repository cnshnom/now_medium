<h1 class='title'>Story Series</h1>

<% @stories.each do |story| %>
  <div class="content">
    <h2 class="title">
      <%= story.title%></h2>
     <p> <%= story.content %></p>
   
    
    <p>
      Last edited: <%= story.updated_at %>
      <%= link_to "edit", edit_story_path(story), class: 'button is-text is-small' %>
      <%= link_to "delete", story, method: 'delete', class: 'button is-danger is-small', data: { confirm: 'confirm delete?!'} %>
    </p>
  </div>
<% end %>
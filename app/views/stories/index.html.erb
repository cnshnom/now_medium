<h1 class='title'>Story Series</h1>

<% @stories.each do |story| %>
  <div class="content">
    <h2 class="title">
      <%= link_to story.title, edit_story_path(story), class: 'has-text-grey-darker' %>
         <%= content_tag :span, 'published', class: 'tag is-primary' if story.published? %>
      </h2>
     <p> <%= story.content %></p>
   
    
    <p>
      Last edited: <%= story.updated_at %>
      <%= link_to "edit", edit_story_path(story), class: 'button is-text is-small' %>
      <%= button_to "delete", story, method: 'delete', class: 'button is-danger is-small', data: { confirm: 'confirm delete?!'} %>
    </p>
  </div>
<% end %>